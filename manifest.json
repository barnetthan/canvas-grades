{
  "manifest_version": 3,
  "name": "Canvas Grades",
  "version": "1.0.0",
  "description": "View your course grades on the dashboard",
  "icons": {
    "128": "CanvasGradesIcon.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://*.instructure.com/*"
  ],
  "action": {
    "default_icon": "CanvasGradesIcon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instructure.com/*"],
      "js": ["content.js"]
    }
  ]
}
